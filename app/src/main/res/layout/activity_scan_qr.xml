<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    android:paddingLeft="5dp"
    tools:context="ivent.com.ivent.ScanQRActivity">

    <TextView
        android:id="@+id/scan_event_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="5dp"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:visibility="invisible"
        tools:text="Event name" />

    <ImageView
        android:id="@+id/scan_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/scan_event_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/scan_owner"
        android:layout_width="265dp"
        android:layout_height="30dp"
        android:layout_below="@+id/scan_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/scan_address"
        android:layout_width="265dp"
        android:layout_height="30dp"
        android:layout_above="@+id/check_in"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:paddingLeft="5dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/scan_participants"
        android:layout_width="265dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/scan_address"
        android:layout_alignStart="@+id/scan_address"
        android:layout_marginBottom="44dp"
        android:paddingLeft="5dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/check_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="Check In"
        android:visibility="invisible" />

</RelativeLayout>
